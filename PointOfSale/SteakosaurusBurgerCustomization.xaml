<Page x:Class="PointOfSale.SteakosaurusBurgerCustomization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SteakosaurusBurgerCustomization">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock FontSize="20" Text="Customize Steakosaurus Burger"></TextBlock>
        <Button Click="BunClick" Grid.Column="0" Grid.Row="1" Margin="5" FontSize="20">Hold Bun</Button>
        <Button Click="PickleClick" Grid.Column="0" Grid.Row="2" Margin="5" FontSize="20">Hold Pickle</Button>
        <Button Click="KetchupClick" Grid.Column="1" Grid.Row="2" Margin="5" FontSize="20">Hold Ketchup</Button>
        <Button Click="MustardClick" Grid.Column="1" Grid.Row="1" Margin="5" FontSize="20">Hold Mustard</Button>
        <Button Click="DoneClick" Grid.ColumnSpan="2" Grid.Row="3" Margin="5" FontSize="20">Done Customizing</Button>
    </Grid>
</Page>
