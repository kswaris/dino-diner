<Page x:Class="PointOfSale.BrontowurstCustomization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BrontowurstCustomization">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Customize Brontowurst" Grid.ColumnSpan="2" TextAlignment="Center" VerticalAlignment="Center"/>
        <Button Margin="5" Click="OnionClick" FontSize="20" Grid.Row="1" Grid.Column="0">Hold Onions</Button>
        <Button Margin="5" Click="PepperClick" FontSize="20" Grid.Row="2" Grid.Column="0">Hold Peppers</Button>
        <Button Margin="5" Click="BunClick" FontSize="20" Grid.Row="1" Grid.Column="1">Hold Bun</Button>
        <Button Margin="5" Click="DoneClick" FontSize="20" Grid.Row="2" Grid.Column="1">Done Customizing</Button>
    </Grid>
</Page>
