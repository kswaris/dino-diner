@page
@model Website.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>
<h2>Combos</h2>
@foreach (var i in Model.Menu.AvailableCombos)
{
    <div class="menu-item">
        <h3>@i.Description</h3>
        <p>Price: $@String.Format("{0:0.00}", i.Price)</p>
        <p>@i.Calories Calories</p>
        <p>
            Ingredients:
            @foreach (var tt in i.Ingredients)
            {
                <p>- @tt</p>
            }
        </p>
    </div>
}
